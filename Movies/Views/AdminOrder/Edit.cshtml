@model Movies.Models.Order

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order no. @Model.Id</h4>
 Created on @Model.DateCreated.ToString("dd.MM.yyyy")
<hr />
