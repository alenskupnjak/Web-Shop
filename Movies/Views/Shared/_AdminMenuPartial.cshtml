@using Microsoft.AspNetCore.Identity
@using Movies.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
	<li class="nav-item dropdown">
		<a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
		<div class="dropdown-menu" style="">

			<a class="dropdown-item" asp-controller="AdminCategory" asp-controller="Category" asp-action="Index">Categories</a>
			<a class="dropdown-item" asp-controller="AdminProduct" asp-controller="Product" asp-action="Index">Products</a>
			<div class="dropdown-divider"></div>
			<a class="dropdown-item" asp-controller="AdminOrder" asp-action="Orders">Orders</a>
		</div>
	</li>
}